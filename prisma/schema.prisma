generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PMAttempt {
  id              String   @id @default(cuid())
  anonId          String
  mode            String   // "text" | "voice"
  question        String
  topic           String?
  difficulty      Int?
  transcript      String?
  feedbackJson    Json?
  structure       Int?
  clarity         Int?
  productThinking Int?
  metrics         Int?
  communication   Int?
  overallScore    Int?
  durationSec     Int?
  audioUrl        String?
  createdAt       DateTime @default(now())
}
